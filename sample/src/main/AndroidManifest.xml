<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laevatein.sample" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LActionBarActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".LFragmentActivity"
            android:label="@string/title_activity_lfragment" >
        </activity>
        <activity
            android:name=".LToolbarActivity"
            android:label="@string/title_activity_ltoolbar">
        </activity>
    </application>

</manifest>
